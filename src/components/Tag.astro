---
export interface Props {
  tag: string;
  size?: "sm" | "lg";
}

const { tag, size = "sm" } = Astro.props;
---

<li
  class={`inline-block ${
    size === "sm" ? "my-1 mx-1" : "my-3 mx-2"
  }`}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class={`
      group
      inline-flex items-center justify-center gap-1
      rounded-full
      border
      bg-blue-500/10
      border-blue-300/25
      text-blue-100
      transition-all duration-300 ease-out
      hover:-translate-y-[2px]
      hover:bg-blue-500/20
      hover:border-blue-300/45
      hover:text-blue-50
      hover:shadow-[0_6px_18px_rgba(77,93,255,0.25)]
      focus-visible:outline-none
      focus-visible:ring-2
      focus-visible:ring-blue-400/50
      ${size === "sm"
        ? "px-3 py-1 text-xs"
        : "px-4 py-2 text-sm font-medium"}
    `}
  >
    <span class="relative z-10">{tag}</span>
  </a>
</li>
