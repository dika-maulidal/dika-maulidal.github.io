---
export interface Props {
  tag: string;
  size?: "sm" | "lg";
}

const { tag, size = "sm" } = Astro.props;
---

<li
  class={`inline-block ${
    size === "sm" ? "my-1 mx-2" : "my-3 mx-2"
  }`}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class={`group inline-flex items-center justify-center 
      px-3 py-1 rounded-md 
      ${size === "sm" ? "text-sm" : "text-lg"} 
      bg-blue-500/20 border border-blue-300/30 
      backdrop-blur-md shadow-sm 
      transition-all duration-300 
      hover:bg-blue-500/30 hover:border-blue-300/50 
      hover:shadow-[0_0_12px_rgba(59,130,246,0.3)] hover:text-blue-300 focus-visible:p-1`}
  >
    <span class="text-blue-100">{tag}</span>
  </a>
</li>