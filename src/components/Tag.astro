---
export interface Props {
  tag: string;
  size?: "sm" | "lg";
}

const { tag, size = "sm" } = Astro.props;
---

<li
  class={`inline-block ${
    size === "sm" ? "my-1 mx-2" : "my-3 mx-2"
  }`}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class={`group inline-flex items-center justify-center 
      px-3 py-1 rounded-md 
      ${size === "sm" ? "text-sm" : "text-lg"} 
      bg-blue-500/15 border border-blue-300/20 
      transition-all duration-200 
      hover:bg-blue-500/25 hover:border-blue-300/40 hover:text-blue-50 
      focus-visible:p-1`}
  >
    <span class="text-blue-100">{tag}</span>
  </a>
</li>