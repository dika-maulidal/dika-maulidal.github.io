---
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class={`${noMarginTop ? "" : "mt-auto"}`}>
  <!-- <Hr noPadding /> -->
  <div class="footer-wrapper">
    <Socials centered />
    <div class="copyright-wrapper">
      <span>Copyright © {currentYear}</span>
      <span class="separator"> | </span>
      <span>Built with ChatGPT.</span>
    </div>
  </div>
</footer>

<style>
  footer {
    @apply w-full;
    background: rgba(0, 68, 255, 0.327); /* Blue-tinted semi-transparent background */
    border-radius: 10px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
  }
  .footer-wrapper {
    @apply flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4;
  }
  .link-button {
    @apply my-1 p-2 hover:rotate-6;
    transition: transform 0.3s ease; /* Smooth hover transition */
  }
  .link-button svg {
    @apply scale-125;
    fill: #60a5fa; /* Blue accent for SVG icons */
  }
  .copyright-wrapper {
    @apply my-2 flex flex-col items-center whitespace-nowrap sm:flex-row;
    color: #bfdbfe; /* Light blue text for contrast */
  }
  .separator {
    @apply hidden sm:inline;
    color: #93c5fd; /* Slightly lighter blue for separator */
  }
</style>