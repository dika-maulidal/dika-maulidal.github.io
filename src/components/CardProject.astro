---
interface Props {
  title: string;
  image: string;
  tech: string[];
  previewUrl: string;
  githubUrl: string;
  description: string;
}

const { title, image, tech, previewUrl, githubUrl, description } = Astro.props;

// Map tech names to Iconify icon names
const techIcons: Record<string, string> = {
  Python: "logos:python",
  "Fuzzy Logic": "carbon:machine-learning",
  Streamlit: "simple-icons:streamlit",
  Astro: "logos:astro-icon",
  "Tailwind CSS": "logos:tailwindcss-icon",
  HTML: "logos:html-5",
  VSCode: "logos:visual-studio-code",
  ChatGPT: "arcticons:openai-chatgpt"
};
---

<article class="project-card grid grid-cols-1 sm:grid-cols-2 gap-6">
  <div class="image-frame col-span-1">
    <img src={image} alt={title} class="project-image" />
  </div>

  <div class="project-content col-span-1 flex flex-col gap-4">
    <h3 class="project-title">{title}</h3>

    <ul class="tech-list">
      {
        tech.map(techItem => (
          <li class="tech-item">
            {techItem === "Beautiful Soup" ? (
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="tech-icon" role="img">
                <title>BeautifulSoup</title>
                <path d="M2 12a10 10 0 1020 0H2zm16.8 2c-.9 1.8-3.5 3-6.8 3s-5.9-1.2-6.8-3h13.6zM10 5s-.5 1 .5 2S10 9 10 9s-.5-1 .5-2S10 5 10 5zm4 0s-.5 1 .5 2S14 9 14 9s-.5-1 .5-2S14 5 14 5z"/>
              </svg>
            ) : techItem === "ChatGPT" ? (
              <img
                src={`https://api.iconify.design/arcticons:openai-chatgpt.svg?color=white`}
                alt={`${techItem} icon`}
                class="tech-icon"
              />
            ) : techIcons[techItem] ? (
              <img
                src={`https://api.iconify.design/${techIcons[techItem]}.svg`}
                alt={`${techItem} icon`}
                class="tech-icon"
              />
            ) : (
              <span class="tech-icon placeholder">?</span>
            )}
            <span>{techItem}</span>
          </li>
        ))
      }
    </ul>    

    <p class="project-description">{description}</p>

    <div class="project-links">
      <a href={previewUrl} target="_blank" rel="noopener noreferrer" class="link-button preview-button">
        <img
          src="https://api.iconify.design/carbon:launch.svg?color=white"
          alt="Preview icon"
          class="link-icon"
        />
        Preview
      </a>
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="link-button github-button">
        <img
          src="https://api.iconify.design/simple-icons:github.svg?color=white"
          alt="GitHub icon"
          class="link-icon"
        />
        GitHub
      </a>
    </div>
  </div>
</article>

<style>
  .project-card {
  @apply mb-6 rounded-xl p-5;
  background: rgba(59, 130, 246, 0.10); /* blue-500/10 */
border: 1px solid rgba(147, 197, 253, 0.20); /* blue-300/20 */
/* box-shadow: 0 10px 25px rgba(77, 93, 255, 0.25); */


  /* ðŸ‘‡ tambahin ini */
  transform: translateY(0);
  transition:
    transform .3s ease,
    border-color .25s ease,
    box-shadow .25s ease;
}


.project-card:hover {
  transform: translateY(-6px);
  border-color: rgba(147, 197, 253, 0.6);
  background: rgba(59, 130, 246, 0.15);
  /* box-shadow: 0 12px 30px rgba(77, 93, 255, 0.35); */
}



/* Image */
.image-frame {
  @apply h-48 w-full rounded-lg overflow-hidden border;
  border-color: rgba(96,165,250,.2);
}

.project-image {
  @apply h-full w-full object-cover transition-transform duration-500;
}

.project-card:hover .project-image {
  transform: scale(1.04);
}

/* Title */
.project-title {
  @apply text-lg font-semibold tracking-wide;
  color: #e5edff;
  text-shadow: 0 0 8px rgba(96,165,250,.35);
}

/* Description */
.project-description {
  color: #9fb3d9;
  font-size: .95rem;
}

/* Tech tags */
.tech-list {
  @apply flex flex-wrap gap-2;
}

.tech-item {
  @apply flex items-center gap-1 rounded-md px-2 py-1 text-xs font-medium;
  background: rgba(59, 130, 246, 0.12);   /* blue-500/12 */
  border: 1px solid rgba(147, 197, 253, 0.25);
  color: #dbeafe;
  transition: all .2s ease;
}

.tech-item:hover {
  background: rgba(59, 130, 246, 0.2);
  border-color: rgba(147, 197, 253, 0.5);
}


.tech-icon {
  @apply h-4 w-4 opacity-90;
}

/* Buttons */
.project-links {
  @apply flex gap-3 pt-2;
}

.link-button {
  @apply flex items-center gap-2 rounded-md px-3 py-1 text-sm;
  background: rgba(59, 130, 246, 0.12);
  border: 1px solid rgba(147, 197, 253, 0.3);
  color: #dbeafe;
  transition: all .25s ease;
}

.link-button:hover {
  background: rgba(59, 130, 246, 0.2);
  border-color: rgba(147, 197, 253, 0.6);
  box-shadow: 0 0 15px rgba(77, 93, 255, 0.25);
}


.link-icon {
  @apply h-5 w-5 opacity-80;
}

</style>